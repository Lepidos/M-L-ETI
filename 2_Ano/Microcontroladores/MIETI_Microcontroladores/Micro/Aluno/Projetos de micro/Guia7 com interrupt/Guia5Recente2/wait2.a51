	NAME WAIT2
	PUBLIC WAIT2
	WAIT2CODE SEGMENT CODE 
	RSEG WAIT2CODE
	JMP WAIT2
	
	EXTRN DATA(TRINCO)
	EXTRN CODE (ISR)


WAIT2:
	MOV TMOD,#10H //ATIVA TIMER1 NO MODO 1
	MOV R5,#0FFH
	MOV R4,#0FFH 
	SETB EA
	SETB ET1
	MOV TRINCO,#1
	MOV TH1,#HIGH(-50000)
	MOV TL1,#LOW(-50000)
	SETB TR1
RET
	
	CSEG AT 01BH
	JMP ISRTIMER
ISRTIMER:
	CALL ISR
	RETI
	END