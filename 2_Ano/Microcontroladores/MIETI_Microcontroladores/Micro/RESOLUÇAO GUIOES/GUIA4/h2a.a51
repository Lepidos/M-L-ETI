#include <89c51rx2.inc>

	
	PUBLIC INICIOH2A // ESTA LABEL PASSA A SER VISIVEL PARA O  RESTO DO CODIGO
	
	H2ACODE SEGMENT CODE
	RSEG H2ACODE // O COMPILADOR PODE POR ESTE CODIGO ONDE QUISER
			
INICIOH2A:
		MOV A,@R0
		CLR C
		SUBB A,#10
		
		JC BA3_NAO
		ADD A,#'A'
		MOV B,A
		JMP FIMH2A

BA3_NAO:
		ADD A,#10
		ADD A,#'0'
		MOV B,A
		
FIMH2A:
	RET
END