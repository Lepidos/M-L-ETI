

CSEG 	AT 	0H
JMP MAIN
CSEG  	AT 	30H

MAIN:
		MOV 	DPTR,#ARMAZENAR
		MOV 	R0,#0H
		MOV 	R1,#20
		MOV		R2,#0H
		MOV		R3,#0FFH
		
CONTAR:
		MOV		A, R0
		MOVC 	A,@A+DPTR
		MOV 	R2,A
		MOV		R4,A;N A DECREMENTAR
		MOV		B,R3
		MOV		R5,B;N A DECREMENTAR
		INC		R4;CASO SEJA 0
		INC		R5;CASO SEJA 0
		INC 	R0;PROXIMO NUMERO
		JNB		Acc.0,DECREMENTAR  ;VERIFICAR SE É PAR
		DJNZ	 R1, CONTAR
		JMP 	$
		
DECREMENTAR:
		DEC		R4
		DEC		R5
		MOV		A,R4
		CJNE	A,#0H, OUTRO
		JMP		MENOR
OUTRO:
		MOV		A,R5
		CJNE	A,#0H, DECREMENTAR
		DJNZ 	R1, CONTAR
		JMP 	$
		
MENOR:
		MOV		A,R2
		MOV		R3,A
		DJNZ 	R1, CONTAR
		JMP 	$
		
	CSEG 	AT	440H	
ARMAZENAR:
	DB 3H,6H,8H,4H,9H,9H,9H,1H,9H,2H,9H,9H,9H,9H,9H,9H,9H,9H,9H,9H,9H;
END